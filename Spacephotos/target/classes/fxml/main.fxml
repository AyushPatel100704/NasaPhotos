<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ayushpatel.spacephotos.controller.NASAController" alignment="CENTER" spacing="10">
    <!-- Label for instructions -->
    <Label text="Press this Fetch button to view amazing images captured by NASA" />

    <!-- Fetch Button -->
    <Button fx:id="fetchButton" text="Fetch Photos" onAction="#fetchPhoto"/>

    <!-- ScrollPane containing the images -->
    <ScrollPane fx:id="scrollPane">
        <VBox fx:id="imageContainer" alignment="CENTER" />
    </ScrollPane>
</VBox>
